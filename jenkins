pipeline {
    agent {label 'local-agent'}

    environment {
        SONARQUBE = 'SonarQube-Local' 
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Ayoobkibrahim/maven-project.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Unit Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Code Analysis') {
            steps {
                withSonarQubeEnv("SonarQube-Local") {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=maven-project'
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script{
                    timeout(time: 2, unit: 'MINUTES') {
                    def qg = waitForQualityGate()
                    if(qg.status != 'OK'){
                        error "‚ùåPipeline failed because Quality Gate status is: ${qg.status}"
                    }else{
                        echo "‚úÖ Quality Gate passed with status: ${qg.status}"
                    }
                  }
                }
            }
        }
    }

    post {
        success {
            mail to: 'ayoobkibrahim109@gmail.com',
                subject: "‚úÖ SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """Good news! The pipeline succeeded.
             
                ‚Ä¢ Job: ${env.JOB_NAME}
                ‚Ä¢ Build Number: ${env.BUILD_NUMBER}
                ‚Ä¢ URL: ${env.BUILD_URL}
                """
        }
        failure {
            mail to: 'ayoobkibrahim109@gmail.com',
                subject: "‚ùå FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """The pipeline failed.
             
                ‚Ä¢ Job: ${env.JOB_NAME}
                ‚Ä¢ Build URL: ${env.BUILD_URL}
                ‚Ä¢ Check console logs for error details.
                """
        }
        aborted {
            mail to: 'ayoobkibrahim109@gmail.com',
                subject: "üö´ ABORTED: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """The build was manually aborted.
             
                ‚Ä¢ Job: ${env.JOB_NAME}
                ‚Ä¢ URL: ${env.BUILD_URL}
                ‚Ä¢ Check if it was canceled intentionally.
                """
        }
    }
}
